   },
   "outputs": [],
   "source": [
    "class Cylindre(object):\n",
    "    \n",
    "    def __init__(self,hauteur=1,rayon=1):\n",
    "        self.hauteur = hauteur\n",
    "        self.rayon = rayon\n",
    "        \n",
    "    def volume(self):\n",
    "        return self.hauteur * (3.14)* (self.rayon)**2\n",
    "    \n",
    "    def surface(self):\n",
    "        dessus = (3.14)* (self.rayon)**2\n",
    "        return 2*dessus + 2*3.14*self.rayon*self.hauteur"
   ]
